{
  "manifest_version": 2,
  "name": "Word Count Extension",
  "version": "1.0",
  "description": "A Chrome extension that counts the number of words in the input text.",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
